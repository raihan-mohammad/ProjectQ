<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="trainedge.projectq.Player"
    android:background="@drawable/newback">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_column="0"
            android:layout_row="0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#5aaaadaa"
            android:padding="16dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/b5"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exercise Your Brain"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="36dp"
                android:textColor="#030303" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_column="1"
            android:layout_row="0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#5aaaadaa"
            android:padding="16dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/challenge2"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Challenge"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="36dp"
                android:textColor="#030303" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_column="0"
            android:layout_row="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#5aaaadaa"
            android:padding="16dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/tournament2"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/textView3" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tournament"
                android:layout_marginBottom="36dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textColor="#030303" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_column="1"
            android:layout_row="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#5aaaadaa"
            android:padding="16dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="4dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/add"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Quiz"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="37dp"
                android:textColor="#030303" />

        </RelativeLayout>

    </GridLayout>

</RelativeLayout>
