<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newback"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="trainedge.projectq.Player"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/R1">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:id="@+id/imagev1"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/b5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exercise Your Brain"
                android:id="@+id/textv1"
                android:layout_below="@+id/imagev1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:gravity="center" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/R2">
            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:id="@+id/imagev2"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/challenge2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Challenge"
                android:id="@+id/textv2"
                android:gravity="center"
                android:layout_below="@+id/imagev2"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/R3">
            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:id="@+id/imagev3"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/tournament2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tournament"
                android:id="@+id/textv3"
                android:layout_below="@+id/imagev3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:gravity="center" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/R4">
            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:id="@+id/imagev4"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/add" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Quiz"
                android:id="@+id/textv4"
                android:layout_below="@+id/imagev4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:gravity="center" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
