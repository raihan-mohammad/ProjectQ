<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/play"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="trainedge.projectq.Play_two">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:background="#29929192"
        android:padding="4dp"
        android:layout_above="@+id/relativeLayout2"
        android:elevation="4dp"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="Name the device."
            android:textColor="#fbf6f6"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/tv1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/microscope" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/img1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="4dp"
        android:src="@drawable/ic_account_circle_black_24dp1" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/img1"
        android:text="Player 1"
        android:textColor="#f1e9e9"
        android:textSize="20dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout2"
        android:background="#29929192"
        android:layout_marginBottom="10dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="4dp"
            android:rowCount="2"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/btnOption1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:text="Microscope"
                android:background="#7ce73333"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:padding="4dp" />

            <Button
                android:id="@+id/btnOption2"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:text="Telescope"
                android:textSize="15dp"
                android:background="#3c3ebc4f"
                android:padding="4dp"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btnOption3"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:text="option 3"
                android:textSize="15dp"
                android:background="#4d3453a0"
                android:padding="4dp"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btnOption4"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:text="Option 4"
                android:textSize="15dp"
                android:background="#55f2d634"
                android:padding="4dp"
                android:textColor="#ffffff" />
        </GridLayout>
    </RelativeLayout>

</RelativeLayout>
