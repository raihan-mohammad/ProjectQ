<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f4a0a0"
    android:id="@+id/Scroll">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="trainedge.projectq.Add_picture"
        android:orientation="vertical"
        android:background="@drawable/bb2"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter the Question"
                android:id="@+id/tv1"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:padding="4dp"
                android:textColor="#050505" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et1"
                android:layout_below="@+id/tv1"
                android:layout_alignStart="@+id/tv1"
                android:layout_marginRight="16dp"
                android:background="@drawable/edittextbg"
                android:textSize="10dp"
                android:layout_marginBottom="16dp"
                android:hint="Your Question" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/relativeLayout2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose an Image"
                android:id="@+id/tv2"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:padding="4dp"
                android:textColor="#040404" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/iv1"
                android:layout_alignStart="@+id/tv2"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:padding="4dp"
                android:background="#fefefe"
                android:layout_marginLeft="170dp"
                android:layout_alignTop="@+id/tv2"
                android:minHeight="150dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Browse"
                android:id="@+id/tv3"
                android:padding="4dp"
                android:textColor="#5975e8"
                android:layout_below="@+id/tv2"
                android:layout_alignStart="@+id/tv2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Upload"
                android:id="@+id/tv4"
                android:padding="4dp"
                android:textColor="#5975e8"
                android:layout_centerVertical="true"
                android:layout_alignStart="@+id/tv3" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:paddingBottom="16dp"
            android:layout_weight="20.69">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter The Answer"
                android:id="@+id/tv5"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:padding="4dp"
                android:textColor="#040404" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et2"
                android:layout_below="@+id/tv5"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/edittextbg"
                android:textSize="10dp"
                android:hint="Option A" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et3"
                android:layout_below="@+id/et2"
                android:layout_alignStart="@+id/et2"
                android:layout_marginRight="16dp"
                android:background="@drawable/edittextbg"
                android:textSize="10dp"
                android:layout_marginTop="10dp"
                android:hint="Option B" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et4"
                android:layout_below="@+id/et3"
                android:layout_alignStart="@+id/et3"
                android:layout_marginRight="16dp"
                android:background="@drawable/edittextbg"
                android:textSize="10dp"
                android:layout_marginTop="10dp"
                android:hint="Option C" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et5"
                android:layout_below="@+id/et4"
                android:layout_alignStart="@+id/et4"
                android:layout_marginRight="16dp"
                android:background="@drawable/edittextbg"
                android:textSize="10dp"
                android:layout_marginTop="10dp"
                android:hint="Option D" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correct Answer"
                android:id="@+id/textView"
                android:layout_below="@+id/et5"
                android:layout_alignParentStart="true"
                android:layout_marginTop="44dp"
                android:layout_marginLeft="16dp"
                android:textColor="#090909" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et6"
                android:layout_below="@+id/et4"
                android:layout_alignStart="@+id/et4"
                android:layout_marginRight="16dp"
                android:background="@drawable/edittextbg"
                android:textSize="10dp"
                android:layout_marginTop="115dp" />


        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:id="@+id/b1"
                android:layout_weight="1"
                android:layout_margin="16dp"
                android:background="#02000000" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Back"
                android:id="@+id/b2"
                android:layout_weight="1"
                android:background="#02000000"
                android:layout_margin="16dp" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>