<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    tools:showIn="@layout/activity_sign_up">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgV1"
        android:src="@drawable/ic_account_circle_black_24dp"
        android:padding="4dp"
        android:layout_above="@+id/imgV2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editT1"
        android:layout_alignBottom="@+id/imgV1"
        android:layout_toRightOf="@+id/imgV1"
        android:layout_toEndOf="@+id/imgV1"
        android:hint="Enter Your Name"
        android:layout_marginLeft="16dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgV2"
        android:src="@drawable/ic_supervisor_account_black_24dp"
        android:padding="4dp"
        android:layout_above="@+id/imgV3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/rGroup"
        android:layout_above="@+id/imgV3"
        android:layout_alignLeft="@+id/editT1"
        android:layout_alignStart="@+id/editT1"
        android:layout_alignTop="@+id/imgV2">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Male"
            android:id="@+id/radB1"
            android:checked="false"
            android:padding="4dp"
            android:layout_marginLeft="16dp"
            android:textSize="17dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Female"
            android:id="@+id/radB2"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:padding="4dp"
            android:layout_marginLeft="24dp"
            android:textSize="17dp" />

    </RadioGroup>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgV3"
        android:src="@drawable/ic_local_post_office_black_24dp"
        android:padding="4dp"
        android:layout_above="@+id/imgV4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editT2"
        android:layout_alignBottom="@+id/imgV3"
        android:layout_alignLeft="@+id/rGroup"
        android:layout_alignStart="@+id/rGroup"
        android:hint="Enter Your Email" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgV4"
        android:src="@drawable/ic_https_black_24dp"
        android:padding="4dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgV5"
        android:src="@drawable/ic_check_black_24dp"
        android:padding="4dp"
        android:layout_below="@+id/imgV4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editT3"
        android:layout_above="@+id/imgV5"
        android:layout_alignLeft="@+id/editT2"
        android:layout_alignStart="@+id/editT2"
        android:hint="Password" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editT4"
        android:layout_alignTop="@+id/imgV5"
        android:layout_alignLeft="@+id/editT3"
        android:layout_alignStart="@+id/editT3"
        android:hint="Confirm Password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="REGISTER YOURSELF"
        android:id="@+id/textV1"
        android:textSize="23dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="To get access to the app"
        android:id="@+id/textV2"
        android:layout_below="@+id/textV1"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
