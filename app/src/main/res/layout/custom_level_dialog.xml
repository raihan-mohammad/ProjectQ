<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="194dp"
        android:layout_gravity="center_horizontal"
        android:background="#dca372"
        android:padding="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_icon"
            android:src="@drawable/ic_wb_incandescent_black_24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Level 7"
            android:id="@+id/level"
            android:layout_alignParentStart="true"
            android:textSize="20dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_below="@+id/profile_icon"
            android:layout_marginBottom="10dp" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:progress="5"
            android:max="20"
            android:layout_below="@+id/level"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="7003/8990 XP"
            android:id="@+id/xp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_alignBottom="@+id/level"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/profile_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Rank: Novice"
            android:id="@+id/rank"
            android:textSize="20dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_above="@+id/xp"
            android:layout_toEndOf="@+id/profile_icon"
            android:layout_marginStart="76dp"
            android:layout_margin="20dp" />

    </RelativeLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:background="@drawable/com_facebook_close"
        android:layout_gravity="right" />
</FrameLayout>