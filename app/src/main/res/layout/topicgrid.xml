<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/cvTopic"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="2dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="#4ae78b51">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/ivTopicIcon"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/basketball"
            android:layout_margin="4dp"
            android:padding="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sports"
            android:id="@+id/tvTopicName"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_alignLeft="@+id/ivTopicIcon"
            android:layout_alignStart="@+id/ivTopicIcon"
            android:layout_below="@+id/ivTopicIcon"
            android:layout_alignRight="@+id/ivTopicIcon"
            android:layout_alignEnd="@+id/ivTopicIcon"
            android:singleLine="true" />
    </RelativeLayout>

</android.support.v7.widget.CardView>